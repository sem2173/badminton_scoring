<!Doctype html>
<html>
<head>
    <title>Score a badminton match</title>
</head>
<body>
    <h1> Katabadminton</h1>
    <p> Pour entrer un point appuyer sur le boutton</p> 
    <form method="post" action="/">
        <input type="submit" value="Joueur 1" name="marque" />
        <input type="hidden" value="0" name="score_joueur_1">
        <input type="submit" value="Joueur 2" name="marque"/>
        <input type="hidden" value="0" name="score_joueur_2">
    </form>

    <div>Joueur1  point: <%= @point[:J1] %> set: <%= @set[:J1] %></div>
    <div>Joueur2  point: <%= @point[:J2] %> set: <%= @set[:J2] %></div>

    <form method="post" action="/reset_game">
        <input type="submit" value="Reset Game"/>
    </form>

</body>
</html>
